<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Profile Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Smart Tracker"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/text_color" />
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday, September 12"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:background="@android:color/transparent"
                android:contentDescription="Profile"
                android:scaleType="centerCrop"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp" />
        </LinearLayout>

        <!-- Active Session Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="#E8F8F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Icon Placeholder -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/book"
                    android:tint="#4CAF50"
                    android:contentDescription="Session Icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sinhala"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#212121" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Started at 20:52"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min.15:41"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#212121"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_media_play"
                    android:tint="#4CAF50"
                    android:contentDescription="Play" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Study Environment Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="#A084EE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Environment"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Optimize for better focus"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Temperature -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_temp"
                            android:contentDescription="Temp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/temperatureTextView"
                            android:text="           "
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Temprature"
                            android:textColor="#E0E0E0"
                            android:textSize="14sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/humidity"
                            android:contentDescription="Humidity" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="           "
                            android:id="@+id/humidityTextView"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Humidity"
                            android:textColor="#E0E0E0"
                            android:textSize="14sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Status Message -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room is too warm and humid for optimal focus.\nConsider turning on AC."
                    android:textColor="#E0E0E0"
                    android:background="#B39DDB"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:backgroundTint="#B39DDB"
                    android:backgroundTintMode="src_in"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your Progress"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#212121" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450 pts"
                        android:textColor="#FFD600"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:background="#E3F2FD"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        android:textSize="18sp"
                        android:gravity="center" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 3"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 day streak"
                            android:textColor="#757575"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Badges"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <!-- Placeholder for badges -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/btn_star_big_on"
                        android:tint="#FFD600"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/btn_star_big_on"
                        android:tint="#BDBDBD"
                        android:layout_marginEnd="8dp" />
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/btn_star_big_off"
                        android:tint="#BDBDBD" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Alerts Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerts"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/alert_badge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/alert_badge_bg"
                android:text="2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <!-- Info Alert Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E3F0FF"
            android:padding="12dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:elevation="2dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="#2196F3"
                android:contentDescription="Info" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Science exam in 3 days - recommended study time: 1 hours today"
                android:textColor="#1565C0"
                android:layout_marginStart="8dp"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#1565C0"
                android:contentDescription="Dismiss" />
        </LinearLayout>
        <!-- Today's Study Plan Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Study Plan"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF"
            android:padding="8dp"
            android:elevation="2dp">
            <!-- Mathematics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/book"
                    android:tint="#2196F3"
                    android:contentDescription="Mathematics" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mathematics"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours planned"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>
            <!-- Sinhala -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/book"
                    android:tint="#8BC34A"
                    android:contentDescription="Sinhala" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sinhala"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5 hours planned"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>
            <!-- English -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/book"
                    android:tint="#FF9800"
                    android:contentDescription="English" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="English"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hour planned"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>
            <!-- History -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/book"
                    android:tint="#9C27B0"
                    android:contentDescription="History" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="History"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hour planned"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>
            <!-- Science -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/book"
                    android:tint="#00BCD4"
                    android:contentDescription="Science" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Science"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours planned"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>
            <!-- Buddhist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/book"
                    android:tint="#FFC107"
                    android:contentDescription="Buddhist" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buddhist"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hour planned"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>