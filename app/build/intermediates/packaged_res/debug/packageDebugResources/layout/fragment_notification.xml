<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".NotificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/textViewTimetableTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="35dp"
            android:paddingEnd="12dp"
            android:text="Time Table"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTimetableSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Manage your weekly schedule"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/currentDayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Monday"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <HorizontalScrollView
            android:id="@+id/daySelectorScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fillViewport="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <View
                        android:id="@+id/indicator1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#3F51B5"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <View
                        android:id="@+id/indicator2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#3F51B5"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <View
                        android:id="@+id/indicator3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#3F51B5"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <View
                        android:id="@+id/indicator4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#3F51B5"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <View
                        android:id="@+id/indicator5"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#3F51B5"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <View
                        android:id="@+id/indicator6"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#3F51B5"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <View
                        android:id="@+id/indicator7"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#3F51B5"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            >

            <LinearLayout
                android:id="@+id/dailyScheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="View Study Sessions"
            android:focusable="true"
            app:backgroundTint="#00BCD4"
            app:tint="@android:color/white"
            app:srcCompat="@android:drawable/ic_menu_today" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="Add New Schedule Item"
            android:focusable="true"
            app:backgroundTint="#3F51B5"
            app:tint="@android:color/white"
            app:srcCompat="@android:drawable/ic_input_add" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addSubjectPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="8dp"
        android:translationY="1000dp" android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textViewAddSubjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Subject"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Subject Name"
            android:inputType="textCapSentences"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewAddSubjectTitle" />

        <EditText
            android:id="@+id/editTextStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:hint="Start Time (e.g., 09:00 AM)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintEnd_toStartOf="@+id/editTextEndTime"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextSubject" />

        <EditText
            android:id="@+id/editTextEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="End Time (e.g., 10:00 AM)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/editTextStartTime"
            app:layout_constraintTop_toBottomOf="@id/editTextSubject" />

        <Button
            android:id="@+id/buttonAddSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="Add"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/buttonCancelAddSubject"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextStartTime" />

        <Button
            android:id="@+id/buttonCancelAddSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cancel"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/buttonAddSubject"
            app:layout_constraintTop_toBottomOf="@id/editTextStartTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updateDeleteSubjectPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="8dp"
        android:translationY="1000dp" android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textViewUpdateSubjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Subject"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextUpdateSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Subject Name"
            android:inputType="textCapSentences"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewUpdateSubjectTitle" />

        <EditText
            android:id="@+id/editTextUpdateStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:hint="Start Time (e.g., 09:00 AM)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintEnd_toStartOf="@+id/editTextUpdateEndTime"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextUpdateSubject" />

        <EditText
            android:id="@+id/editTextUpdateEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="End Time (e.g., 10:00 AM)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/editTextUpdateStartTime"
            app:layout_constraintTop_toBottomOf="@id/editTextUpdateSubject" />

        <Button
            android:id="@+id/buttonUpdateSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="Update"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/buttonDeleteSubject"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextUpdateStartTime" />

        <Button
            android:id="@+id/buttonDeleteSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="Delete"
            android:backgroundTint="#FF0000"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/buttonCancelUpdateDeleteSubject"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/buttonUpdateSubject"
            app:layout_constraintTop_toBottomOf="@id/editTextUpdateStartTime" />

        <Button
            android:id="@+id/buttonCancelUpdateDeleteSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cancel"
            android:backgroundTint="#CCCCCC"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/buttonDeleteSubject"
            app:layout_constraintTop_toBottomOf="@id/editTextUpdateStartTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sessionDetailsPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#F0F2F5"
        android:padding="16dp"
        android:elevation="12dp"
        android:translationY="1000dp" android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textViewSessionPanelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Sessions"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

        <ImageButton
            android:id="@+id/buttonCloseSessionPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:contentDescription="Close Sessions Panel" />

        <TextView
            android:id="@+id/textViewTotalStudyTimeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Actual Study Time (Last 7 days)"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewSessionPanelTitle"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/textViewTotalActualStudyTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewTotalStudyTimeHeader"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalStudyTimeHeader"
            />

        <TextView
            android:id="@+id/textViewStudyEfficiencyHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Efficiency"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTotalActualStudyTimeValue"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewStudyEfficiencyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewStudyEfficiencyHeader"
            app:layout_constraintBottom_toBottomOf="@id/textViewStudyEfficiencyHeader"
            />

        <TextView
            android:id="@+id/textViewScheduledStudyTimeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled Study Time (Today)"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewStudyEfficiencyValue"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/textViewScheduledStudyTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewScheduledStudyTimeHeader"
            app:layout_constraintBottom_toBottomOf="@id/textViewScheduledStudyTimeHeader"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewScheduledStudyTimeValue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/dailySessionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"/>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

